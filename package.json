{
  "name": "vetra-stablecoin",
  "version": "1.0.0",
  "description": "Vetra 1:1 USD-backed stablecoin with Chainlink proof-of-reserves",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "validate": "ts-node scripts/validate-config.ts",
    "deploy:amoy": "NODE_ENV=development hardhat run scripts/deploy.ts --network amoy",
    "deploy:polygon": "NODE_ENV=production hardhat run scripts/deploy.ts --network polygon",
    "verify:amoy": "hardhat run scripts/verify.ts --network amoy",
    "verify:polygon": "hardhat run scripts/verify.ts --network polygon",
    "update-reserve:amoy": "hardhat run scripts/updateReserve.ts --network amoy",
    "update-reserve:polygon": "hardhat run scripts/updateReserve.ts --network polygon",
    "monitor:amoy": "hardhat run scripts/monitor.ts --network amoy",
    "monitor:polygon": "hardhat run scripts/monitor.ts --network polygon",
    "clean": "hardhat clean",
    "lint": "eslint 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.8.1",
    "chai": "^6.2.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.6.2",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.5.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0"
  }
}
